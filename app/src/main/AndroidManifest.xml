<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaplanbora.stick2exercise">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".routine.RoutineListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".exercise.ExerciseListActivity"
            android:label="@string/title_activity_exercise_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".exercise.CreateExerciseActivity"
            android:label="@string/create_exercise" />
        <activity
            android:name=".exercise.EditExerciseActivity"
            android:label="@string/edit_exercise" />
        <activity
            android:name=".exercise.ExerciseActivity"
            android:label="@string/title_activity_exercise"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MetronomeActivity"
            android:label="@string/metronome"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BreakActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>