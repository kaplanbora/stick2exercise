<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/routineName"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:textAppearance="@style/BlackText"
        android:textColor="@color/pastelBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Routine Name" />

    <TextView
        android:id="@+id/routineCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/BlackTextSmall"
        android:textColor="@color/pastelBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/routineName"
        tools:text="Exercise Count: 5" />

    <TextView
        android:id="@+id/totalDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/BlackTextSmall"
        app:layout_constraintTop_toBottomOf="@id/routineCount"
        android:textColor="@color/pastelBlack"
        tools:text="Total Duration: 5 minutes 30 seconds"
        />

    <Button
        android:id="@+id/routineMenu"
        android:focusable="false"
        android:layout_width="36dp"
        android:layout_height="46dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/pastelBlack"
        style="?android:attr/borderlessButtonStyle"
        android:contentDescription="@string/list_menu"
        android:text="@string/vertical_ellipsis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>