<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.kaplanbora.stick2exercise.CreateRoutineFragment">

    <TextView
        android:id="@+id/createRoutineLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Routine Name:" />

    <EditText
        android:id="@+id/createRoutineInput"
        android:layout_width="200dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/createRoutineCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Cancel" />

        <Button
            android:id="@+id/createRoutineOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="OK" />
    </LinearLayout>
</LinearLayout>