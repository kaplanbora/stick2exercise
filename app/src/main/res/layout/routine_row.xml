<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/routineName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/pastelBlack"
        android:textAppearance="@style/BlackText"
        android:paddingBottom="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Routine Name" />


    <TextView
        android:id="@+id/routineCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/pastelBlack"
        android:textAppearance="@style/BlackTextSmall"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/routineName"
        tools:text="Exercise Count" />

</android.support.constraint.ConstraintLayout>